@model OrganicNutritionRecipes.Areas.admin.Models.AddRecipesViewModel;
@{
    ViewData["Title"] = "Upload New Recipe:";
}
<style>
    input[type=file] {
        padding: 0px;
        padding-left: 5px;
        padding-top: 4px;
    }
</style>
<h3>@ViewBag.Title</h3>
<hr class="mb-3" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeFile" class="control-label"></label>
                <input type="file" asp-for="RecipeFile" class="form-control" accept=".txt" />
                <span asp-validation-for="RecipeFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeType" class="control-label"></label>
                <radio asp-for="RecipeType" class="form-control" />
                <input type="radio" asp-for="RecipeType" value="Sandwiches" id="Sandwiches" />Sandwiches<br />
                <input type="radio" asp-for="RecipeType" value="Soups" id="Soups" />Soups<br />
                <input type="radio" asp-for="RecipeType" value="Salads" id="Salads" />Salads<br />
                <span asp-validation-for="RecipeType" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Upload Recipe" class="btn btn-primary" />
                <a class="btn btn-secondary float-right" asp-action="Index"><i class="fas fa-arrow-alt-circle-left fa-sm mr-1"></i>Cancel</a>
            </div>
        </form>
    </div>
</div>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}