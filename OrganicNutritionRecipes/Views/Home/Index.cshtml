@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <div id="my_container" class="fatsecret_container"></div>

</div>
@section scripts{
    <script type="text/javascript">fatsecret.setContainer("my_container");
        fatsecret.setCanvas("home");
        fatsecret.variables.navOptions = fatsecret.navFeatures.home;// | fatsecret.navFeatures.diet_calendar;
        
        $(document).ready(function () {
            console.log("ready!");
            
        });

        $(window).on('load', function () {
            // code here
            console.log("load!");
            document.getElementById('fatsecret_appTitle').innerHTML = "Search Nutrition Information for food.";
            var elements = document.getElementsByClassName("fatsecret_home_search_input");
            for (var i = 0; i < elements.length; i++) {
                elements[i].setAttribute("placeholder", "Search Nutrition Info for food");
            }
        });

        
    </script>
}
